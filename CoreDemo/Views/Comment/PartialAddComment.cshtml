<div class="comment-top">
	<h4>Yorum Yapın</h4>
	<div class="comment-bottom">
		<form asp-action="PartialAddComment" asp-controller="Comment" method="post">
			<input class="form-control" type="text" name="CommentUserName" id="username" placeholder="Adınız Soyadınız" required="">
			<input class="form-control" type="text" name="CommentTitle" id="title" placeholder="Konu" required="">

			<textarea class="form-control" type="text" name="CommentContent" id="content" placeholder="Yorumunuz..." required=""></textarea>

			<button type="submit" class="btn btn-primary submit">Yorum Yap</button>
		</form>
	</div>
</div>
