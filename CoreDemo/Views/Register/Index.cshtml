@model EntityLayer.Concrete.Writer


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Kayıt Ol</h3>
			<div class="inner-sec">
		<div class="login p-5 bg-light mx-auto mw-100">
			@using(Html.BeginForm("Index","Register",FormMethod.Post)){
					<div class="form-row">
							<div class="col-md-6 mb-3">
									<label for="validationCustom01">Adınız Soyadınız</label>
									@Html.TextBoxFor(w=>w.WriterName,new {@class="form-control"})
									@Html.ValidationMessageFor(w=>w.WriterName,"",new {@class = "text-danger"})
									@*<input type="text" class="form-control" id="validationDefault01" name="WriterName" placeholder="" required="">*@								</div>
							<div class="col-md-6 mb-3">
									<label for="validationCustom02">Mail Adresi</label>
									@Html.TextBoxFor(w=>w.WriterEmail,new {@class="form-control"})
									@Html.ValidationMessageFor(w=>w.WriterEmail,"",new {@class = "text-danger"})
								@*<input type="email" name="WriterEmail" class="form-control" id="validationDefault02" placeholder="" required="">*@
							</div>
						</div>
						<div class="form-row">
							<div class="form-group col-md-6">
									<label for="exampleInputPassword1 mb-2">Şifre</label>
									@Html.TextBoxFor(w=>w.WriterPassword,new {@class="form-control",@type="password"})
									@Html.ValidationMessageFor(w=>w.WriterPassword,"",new {@class = "text-danger"})
								@*<input type="password" class="form-control" name="WriterPassword" id="password1" placeholder="" required="">*@
							</div>
							<div class="form-group col-md-6">
									<label for="exampleInputPassword1 mb-2">Şifre(Tekrar)</label>
									<input type="password" class="form-control" name="passwordRepeat" id="passwordRepeat" placeholder="" required="">
									@*@Html.TextBoxFor(w=>w.WriterPassword,new {@class="form-control"})
									@Html.ValidationMessageFor(w=>w.WriterPassword,"",new {@class = "text-danger"})*@
								@*<input type="password" class="form-control" name="WriterPassword" id="password1" placeholder="" required="">*@
							</div>
							<div class="form-group col-md-6">
									<label for="exampleInputPassword2 mb-2">Yaşadığınız Şehir</label>
									@Html.DropDownList("cities", (ViewBag.Cities), "Şehir Seçiniz", new { @class = "form-control dropdown" })
									@*<input type="text" class="form-control" name="WriterImage" id="password2" placeholder="" required="">*@
							</div>
							<div class="form-group col-md-6">
									<label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
									@Html.TextBoxFor(w=>w.WriterImage,new {@class="form-control"})
									@Html.ValidationMessageFor(w=>w.WriterImage,"",new {@class = "text-danger"})
									@*<input type="text" class="form-control" name="WriterImage" id="password2" placeholder="" required="">*@
							</div>
								
						</div>
						<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol!</button>
							<p>
								<a href="#" id="btn1">Okudum, kabul ediyorum!</a>
							</p>
					}
		
				</div>
		</div>
	</div>
	<script>
		$("#btn1").click(function(){
			swal("Test mesajı","Bu bir test mesajıdır!")
		})
	</script>
</section>


